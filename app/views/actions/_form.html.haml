= form_for @action do |f|
  -if @action.errors.any?
    #error_explanation
      %h2= "#{pluralize(@action.errors.count, "error")} prohibited this action from being saved:"
      %ul
        - @action.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ctw_id
    = f.number_field :ctw_id
  .field
    = f.label :cost
    = f.text_field :cost
  .field
    = f.label :amount
    = f.number_field :amount
  .field
    = f.label :timestamp
    = f.datetime_select :timestamp
  .actions
    = f.submit 'Save'
