%h1 Listing CTWs

%br
%p= paginate @ctws

%table
  %tr.header
    %th Name
    %th Description
    %th
    %th
    %th

  - @ctws.each do |ctw|
    %tr{:class => cycle('odd', 'even')} 
      %td= ctw.name
      %td= ctw.description
      %td= link_to 'Show', ctw_path(ctw)
      %td= link_to 'Show Collectors', ctw_ctw_collectors_path(ctw)
      %td
        = link_to 'Edit', edit_ctw_path(ctw)
        |
        = link_to 'Destroy', ctw, :confirm => 'Are you sure?', :method => :delete

%br
%p= paginate @ctws
%br
= link_to 'New CTW', new_ctw_path
