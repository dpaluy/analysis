= simple_form_for @ctw do |f|
  -if @ctw.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ctw.errors.count, "error")} prohibited this ctw from being saved:"
      %ul
        - @ctw.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name, :required => true
  = f.input :description, :as =>  :text
  = f.association :quote, :required => true, :include_blank => false 
  = f.submit 'Save'
