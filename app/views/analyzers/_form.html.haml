= form_for @analyzer do |f|
  -if @analyzer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@analyzer.errors.count, "error")} prohibited this analyzer from being saved:"
      %ul
        - @analyzer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :end_date
    = f.date_select :end_date
  .field
    = f.label :quote_id
    = f.number_field :quote_id
  .field
    = f.label :ctw_id
    = f.number_field :ctw_id    
  .actions
    = f.submit 'Save'
