%h1= @ctw.name

%br
%p= paginate @ctw_collectors

%table
  %tr
    %th ID
    %th Timestamp
    %th Pr0
    %th Pr1
    %th Pr2
    %th Depth

  - @ctw_collectors.each do |ctw_collector|
    %tr
      %td= ctw_collector.id
      %td= ctw_collector.timestamp
      %td
        - if ctw_collector.get_index_of_max == 0
          %b= ctw_collector.pr0
        - else
          = ctw_collector.pr0
      %td
        - if ctw_collector.get_index_of_max == 1
          %b= ctw_collector.pr1
        - else
          = ctw_collector.pr1
      %td
        - if ctw_collector.get_index_of_max == 2
          %b= ctw_collector.pr2
        - else
          = ctw_collector.pr2
      %td= ctw_collector.depth

%p= paginate @ctw_collectors

